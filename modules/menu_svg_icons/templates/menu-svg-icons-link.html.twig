{% if placement == 'right' %}
  {{ title }}
  {%- if icon -%}
  <svg class="menu-icon menu-icon--{{placement}}" {% if (icon_height or icon_weight) %} style="{{ icon_height }}{{ icon_width }}"{% endif %}><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#{{ icon }}"></use></svg>
  {%- endif -%}
{% else %}
  {%- if icon -%}
    <svg class="menu-icon menu-icon--{{placement}}" {% if (icon_height or icon_weight) %} style="{{ icon_height }}{{ icon_width }}"{% endif %}><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#{{ icon }}"></use></svg>
  {%- endif -%}
  {{ title }}
{% endif %}
